{
  "name": "bistro",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Free, open-source Nuxt 4 starter kit for AI-powered SaaS",
  "author": "Bistro Contributors",
  "license": "MIT",
  "scripts": {
    "prepare": "simple-git-hooks",
    "postinstall": "nuxt prepare",
    "setup": "bun run scripts/setup.ts",
    "dev": "nuxt dev",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "nuxt typecheck",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "bunx prisma migrate dev",
    "db:studio": "bunx prisma studio",
    "db:generate": "bunx prisma generate",
    "docker:prod": "docker compose -f docker-compose.prod.yml --env-file .env.docker up --build",
    "docker:prod:build": "docker compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml --env-file .env.docker up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.82",
    "@iconify-json/simple-icons": "^1.2.63",
    "@nuxt/content": "^3.11.0",
    "@nuxt/image": "^2.0.0",
    "@nuxt/ui": "^4.3.0",
    "@nuxtjs/sitemap": "^7.5.2",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vue-email/components": "^0.0.21",
    "@vue-email/render": "^0.0.9",
    "ai": "^5.0.116",
    "better-auth": "^1.4.7",
    "better-sqlite3": "^12.6.2",
    "feed": "^5.2.0",
    "fuse.js": "^7.1.0",
    "nanoid": "^5.1.6",
    "nuxt": "^4.2.2",
    "nuxt-og-image": "^5.1.13",
    "parse5": "^8.0.0",
    "pg": "^8.11.3",
    "pino": "^10.1.1",
    "pino-pretty": "^13.1.3",
    "rehype-raw": "^7.0.0",
    "remark-emoji": "^5.0.2",
    "remark-gfm": "^4.0.1",
    "remark-mdc": "^3.9.0",
    "remark-rehype": "^11.1.2",
    "resend": "^6.6.0",
    "ua-parser-js": "^2.0.8",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/test-utils": "^3.21.0",
    "@scalar/nuxt": "^0.5.53",
    "@types/bun": "1.3.6",
    "@types/pg": "^8.16.0",
    "@types/ua-parser-js": "^0.7.39",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "happy-dom": "^20.0.11",
    "lint-staged": "^16.0.0",
    "nuxt-security": "^2.5.1",
    "playwright-core": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "prisma": "^7.1.0",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "bun run lint:fix",
    "*.{json,md,css}": "prettier --write"
  }
}
