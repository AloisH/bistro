{
  "name": "bistro",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Free, open-source Nuxt 4 starter kit for AI-powered SaaS",
  "author": "Bistro Contributors",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "simple-git-hooks",
    "setup": "bun run scripts/setup.ts",
    "dev": "bun run --filter=web --elide-lines=0 dev",
    "dev:web": "bun run --filter=web --elide-lines=0 dev",
    "dev:landing": "bun run --filter=landing dev",
    "build": "bun run --filter=web build",
    "db:migrate": "bun run --filter=web db:migrate",
    "db:studio": "bun run --filter=web db:studio",
    "db:generate": "bun run --filter=web db:generate",
    "docker:prod": "docker compose -f docker-compose.prod.yml --env-file .env.docker up --build",
    "docker:prod:build": "docker compose -f docker-compose.prod.yml build",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml --env-file .env.docker up -d",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "bun run --filter=web lint",
    "lint:fix": "bun run --filter=web lint:fix",
    "typecheck": "bun run --filter=web typecheck",
    "test": "bun run --filter=web test",
    "test:ui": "bun run --filter=web test:ui",
    "test:run": "bun run --filter=web test:run",
    "test:coverage": "bun run --filter=web test:coverage"
  },
  "devDependencies": {
    "@types/bun": "1.3.4",
    "@types/ua-parser-js": "^0.7.39",
    "eslint": "^9.15.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "apps/web/**/*.{js,ts,vue}": "bun run lint:fix",
    "*.{json,md,css}": "prettier --write"
  },
  "dependencies": {
    "@nuxt/content": "^3.9.0",
    "feed": "^5.1.0",
    "ua-parser-js": "^2.0.7"
  }
}
